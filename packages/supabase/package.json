{
  "name": "@refinedev/supabase",
  "version": "5.10.0",
  "description": "Supabase data‑provider for refine – a React‑based framework for rapidly building internal tools.",
  "license": "MIT",
  "author": "refine",
  "homepage": "https://refine.dev",
  "repository": {
    "type": "git",
    "url": "https://github.com/refinedev/refine.git",
    "directory": "packages/supabase"
  },
  "bugs": {
    "url": "https://github.com/refinedev/refine/issues"
  },
  "keywords": [
    "refine",
    "supabase",
    "data-provider",
    "react",
    "framework",
    "internal-tools"
  ],

  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "default": "./dist/index.mjs"
    }
  },
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist/**",
    "src/**",
    "refine.config.js",
    "CHANGELOG.md",
    "README.md"
  ],

  "scripts": {
    "dev": "tsup --watch --onSuccess \"pnpm test --watchAll=false --passWithNoTests\"",
    "build": "tsup && node ../shared/generate-declarations.js",
    "prepublishOnly": "pnpm test && pnpm build",
    "test": "jest --passWithNoTests --runInBand",
    "lint": "publint --strict --level=suggestion",
    "attw": "attw --pack ."
  },

  "engines": {
    "node": ">=16.14"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },

  "dependencies": {
    "@supabase/supabase-js": "^2.7.0"
  },
  "peerDependencies": {
    "@refinedev/core": "^4.46.1",
    "@supabase/supabase-js": "^2.7.0"
  },
  "peerDependenciesMeta": {
    "@refinedev/core": {
      "optional": false
    }
  },

  "devDependencies": {
    "@esbuild-plugins/node-resolve": "^0.1.4",
    "@refinedev/cli": "^2.16.38",
    "@refinedev/core": "^4.54.1",
    "@types/jest": "^29.2.4",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "nock": "^13.4.0",
    "ts-jest": "^29.1.2",
    "tslib": "^2.6.2",
    "tsup": "^6.7.0",
    "typescript": "^5.4.2"
  }
}
