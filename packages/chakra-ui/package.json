{
  "name": "@refinedev/chakra-ui",
  "version": "3.0.0",
  "private": false,
  "description": "Chakra UI support for Refine, providing flexible and accessible UI components.",
  "license": "MIT",
  "author": "Refine",
  "sideEffects": false,
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "typings": "dist/index.d.ts",
  "scripts": {
    "attw": "attw --pack .",
    "build": "tsup && node ../shared/generate-declarations.js",
    "dev": "tsup --watch",
    "prepare": "pnpm build",
    "publint": "publint --strict=true --level=suggestion",
    "test": "jest --passWithNoTests --runInBand",
    "types": "node ../shared/generate-declarations.js"
  },
  "dependencies": {
    "@chakra-ui/react": "^2.5.1",
    "@chakra-ui/theme-tools": "^2.1.2",
    "@emotion/react": "^11.8.2",
    "@emotion/styled": "^11.8.1",
    "@refinedev/react-hook-form": "^5.0.0",
    "@refinedev/ui-types": "^2.0.0",
    "@tabler/icons-react": "^3.1.0",
    "dayjs": "^1.10.7",
    "framer-motion": "^7.5.3",
    "react-hook-form": "^7.57.0",
    "react-markdown": "^6.0.1",
    "remark-gfm": "^1.0.0",
    "tslib": "^2.6.2"
  },
  "devDependencies": {
    "@esbuild-plugins/node-resolve": "^0.1.4",
    "@refinedev/cli": "^2.16.48",
    "@refinedev/core": "^5.0.0",
    "@refinedev/ui-tests": "^2.0.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.2.4",
    "@types/node": "^20",
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.0",
    "esbuild-copy-static-files": "^0.1.0",
    "esbuild-plugin-inline-image": "^0.0.8",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "react-router": "^7.0.2",
    "ts-jest": "^29.1.2",
    "tsup": "^6.7.0",
    "typescript": "^5.8.3"
  },
  "peerDependencies": {
    "@chakra-ui/react": "^2.5.1",
    "@refinedev/cli": "^2.0.0",
    "@refinedev/core": "^5.0.0",
    "dayjs": "^1.10.7",
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0",
    "react-hook-form": "^7.57.0"
  },
  "engines": {
    "node": ">=20"
  },
  "publishConfig": {
    "access": "public"
  }
}
